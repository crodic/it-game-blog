enum Role {
    ADMIN
    USER
}

model User {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    avatar   String?
    email    String  @unique
    password String
    role     Role    @default(USER)
    posts    Post[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
